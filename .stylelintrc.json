{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-css",
        "stylelint-csstree-validator"
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true,
        "csstree/validator": true
    },
    "ignoreFiles": [
        "build/**",
        "dist/**",
        "**/reset*.css",
        "**/bootstrap*.css"
    ]
}